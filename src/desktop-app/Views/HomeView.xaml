<UserControl x:Class="ArchBuilder.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArchBuilder.Views"
             xmlns:viewmodels="clr-namespace:ArchBuilder.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AppleTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,0,0,32">
            
            <!-- Welcome Section -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Welcome Message -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding WelcomeMessage}" 
                               Style="{StaticResource PageTitle}"/>
                    <TextBlock Text="Yapay zeka destekli mimari tasarım platformu ile projelerinizi kolayca oluşturun ve yönetin."
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               MaxWidth="500"
                               TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Status Card -->
                <Border Grid.Column="1" 
                        Style="{StaticResource CardPanel}"
                        Width="280"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Sistem Durumu" 
                                   Style="{StaticResource SubTitle}"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Cloud API:" 
                                       Style="{StaticResource CaptionText}"
                                       Width="80"/>
                            <TextBlock Text="{Binding ApiStatus}" 
                                       Style="{StaticResource CaptionText}"
                                       FontWeight="Medium"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Projeler:" 
                                       Style="{StaticResource CaptionText}"
                                       Width="80"/>
                            <TextBlock Text="{Binding RecentProjectsCount}" 
                                       Style="{StaticResource CaptionText}"
                                       FontWeight="Medium"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Son Sync:" 
                                       Style="{StaticResource CaptionText}"
                                       Width="80"/>
                            <TextBlock Text="{Binding LastSyncTime, StringFormat=HH:mm}" 
                                       Style="{StaticResource CaptionText}"
                                       FontWeight="Medium"/>
                        </StackPanel>
                        
                        <Button Content="🔄 Yenile" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding RefreshDashboardCommand}"
                                Margin="0,12,0,0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="Hızlı Eylemler" 
                           Style="{StaticResource SectionTitle}"
                           Margin="0,0,0,16"/>
                
                <ItemsControl ItemsSource="{Binding QuickActions}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding Command}"
                                    Margin="0,0,16,0"
                                    Padding="20"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    HorizontalContentAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="12"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource NavigationHoverBrush}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource NavigationSelectedBrush}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                
                                <StackPanel>
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="32" 
                                               HorizontalAlignment="Left"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Title}" 
                                               Style="{StaticResource SubTitle}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Description}" 
                                               Style="{StaticResource CaptionText}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Recent Projects -->
            <StackPanel Margin="0,0,0,32">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Son Projeler" 
                               Style="{StaticResource SectionTitle}"/>
                    
                    <Button Grid.Column="1"
                            Content="Tümünü Gör →"
                            Style="{StaticResource SecondaryButton}"
                            Padding="16,8"/>
                </Grid>
                
                <!-- Projects List -->
                <Border Style="{StaticResource CardPanel}" 
                        Padding="0"
                        MinHeight="200">
                    <Grid>
                        <!-- Loading State -->
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ProgressBar Style="{StaticResource LoadingSpinner}"
                                         Width="150"
                                         Margin="0,0,0,16"/>
                            <TextBlock Text="Projeler yükleniyor..."
                                       Style="{StaticResource CaptionText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Projects Content -->
                        <ItemsControl ItemsSource="{Binding RecentProjects}"
                                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.OpenProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0,0,0,1"
                                            BorderBrush="{StaticResource SeparatorBrush}"
                                            Padding="20,16"
                                            HorizontalContentAlignment="Stretch">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource NavigationHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Project Icon -->
                                            <Border Grid.Column="0"
                                                    Width="40" Height="40"
                                                    Background="{StaticResource AccentBrush}"
                                                    CornerRadius="8"
                                                    Margin="0,0,16,0">
                                                <TextBlock Text="📁" 
                                                           FontSize="20"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Foreground="White"/>
                                            </Border>
                                            
                                            <!-- Project Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                           Style="{StaticResource SubTitle}"
                                                           Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Style="{StaticResource CaptionText}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            
                                            <!-- Project Date -->
                                            <StackPanel Grid.Column="2" 
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding UpdatedAt, StringFormat=dd.MM.yyyy}" 
                                                           Style="{StaticResource CaptionText}"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding UpdatedAt, StringFormat=HH:mm}" 
                                                           Style="{StaticResource CaptionText}"
                                                           HorizontalAlignment="Right"
                                                           Opacity="0.7"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Visibility="{Binding RecentProjects.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="📋" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"
                                       Opacity="0.5"/>
                            <TextBlock Text="Henüz proje yok" 
                                       Style="{StaticResource SubTitle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Başlamak için yukarıdaki hızlı eylemlerden birini seçin"
                                       Style="{StaticResource CaptionText}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="300"/>
                            <Button Content="Yeni Proje Oluştur"
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding CreateNewProjectCommand}"
                                    Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- AI Features Showcase -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="AI Özellikleri" 
                           Style="{StaticResource SectionTitle}"
                           Margin="0,0,0,16"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- AI Design Feature -->
                    <Border Grid.Column="0" 
                            Style="{StaticResource CardPanel}"
                            Padding="24">
                        <StackPanel>
                            <TextBlock Text="🤖" 
                                       FontSize="32"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="AI Tasarım Oluşturucu" 
                                       Style="{StaticResource SubTitle}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Doğal dille tanımladığınız gereksinimlere göre mimari planlar oluşturun. AI, yapı kodları ve enerji verimliliğini dikkate alarak optimize edilmiş tasarımlar üretir."
                                       Style="{StaticResource BodyText}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,16"/>
                            <Button Content="AI Tasarım Başlat"
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding StartAIDesignCommand}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Project Analysis Feature -->
                    <Border Grid.Column="2" 
                            Style="{StaticResource CardPanel}"
                            Padding="24">
                        <StackPanel>
                            <TextBlock Text="📊" 
                                       FontSize="32"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="Proje Analizi" 
                                       Style="{StaticResource SubTitle}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Mevcut Revit projelerinizi analiz edin. AI, performans sorunlarını tespit eder, iyileştirme önerileri sunar ve yapı kodu uyumluluğunu kontrol eder."
                                       Style="{StaticResource BodyText}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,16"/>
                            <Button Content="Proje Analiz Et"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding AnalyzeProjectCommand}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>