<Window x:Class="ArchBuilder.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchBuilder.Views"
        xmlns:viewmodels="clr-namespace:ArchBuilder.ViewModels"
        mc:Ignorable="d"
        Title="ArchBuilder.AI - Yapay Zeka Destekli Mimari Tasarım"
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextForegroundBrush}"
        FontFamily="/ArchBuilder;component/Assets/Fonts/#Segoe UI"
        FontSize="14"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Ortak stiller ve şablonlar buraya eklenebilir -->
    </Window.Resources>

    <Border CornerRadius="10" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/> <!-- Başlık çubuğu -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Özel Başlık Çubuğu -->
            <Grid Grid.Row="0" Background="{DynamicResource TitleBarBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ArchBuilder.AI" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource TitleBarTextForegroundBrush}" FontWeight="SemiBold"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{DynamicResource WindowControlButton}" Content="_" Click="MinimizeWindow_Click"/>
                    <Button Style="{DynamicResource WindowControlButton}" Content="□" Click="MaximizeRestoreWindow_Click"/>
                    <Button Style="{DynamicResource CloseWindowControlButton}" Content="✕" Click="CloseWindow_Click"/>
                </StackPanel>
            </Grid>

            <!-- Ana İçerik Alanı -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
        </Grid>
    </Border>
</Window>

